<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wallpaper_1"
        android:src="@drawable/wallpaper1"
        android:contentDescription="wallpaper_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="92dp">

        <ImageView
            android:id="@+id/logowithname_1"
            android:layout_width="248dp"
            android:layout_height="227dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="0dp"
            android:contentDescription="logowithname_1"
            android:src="@drawable/logowithname" />

        <TextView
            android:id="@+id/seamless_journeys__effortless_booking_"
            android:layout_width="300.6dp"
            android:layout_height="30.6dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="226dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="@string/seamless_journeys__effortless_booking__string"
            android:textColor="@color/seamless_journeys__effortless_booking__color"
            android:textSize="16sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/rectangle1"
        android:textSize="24sp"
        android:shadowRadius="4"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:textColor="@color/white"
        android:text="@string/log_in_string" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="471dp"
        android:background="@drawable/rectangle2"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="@string/register_string"
        android:textColor="@color/white"
        android:textSize="24sp" />

</RelativeLayout>
